@model phoneCaseReworked.ViewModels.ProductMetaViewModel

@{
    ViewData["Title"] = "Manage Phone Models & Case Manufacturers";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        <!-- Phone Models Section -->
        <div class="col-md-6">
            <h4>Add New Phone Model</h4>
            <form asp-action="AddPhoneModel" method="post" class="mb-3">
                <div class="input-group">
                    <input type="text" name="name" class="form-control" placeholder="Enter Phone Model" required />
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
                <span class="text-danger" asp-validation-for="PhoneModels"></span>
            </form>

            <h4>Phone Models List</h4>
            <div style="max-height: 300px; overflow-y: auto; border: 1px solid #ddd; padding: 10px; border-radius: 5px;">
                <ul class="list-group">
                    @foreach (var phoneModel in Model.PhoneModels)
                    {
                        <li class="list-group-item">@phoneModel.Name</li>
                    }
                </ul>
            </div>
        </div>

        <!-- Case Manufacturers Section -->
        <div class="col-md-6">
            <h4>Add New Case Manufacturer</h4>
            <form asp-action="AddCaseManufacturer" method="post" class="mb-3">
                <div class="input-group">
                    <input type="text" name="name" class="form-control" placeholder="Enter Case Manufacturer" required />
                    <button type="submit" class="btn btn-success">Add</button>
                </div>
                <span class="text-danger" asp-validation-for="CaseManufacturers"></span>
            </form>

            <h4>Case Manufacturers List</h4>
            <div style="max-height: 300px; overflow-y: auto; border: 1px solid #ddd; padding: 10px; border-radius: 5px;">
                <ul class="list-group">
                    @foreach (var manufacturer in Model.CaseManufacturers)
                    {
                        <li class="list-group-item">@manufacturer.Name</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
