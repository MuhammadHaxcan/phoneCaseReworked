<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - phoneCaseReworked</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/phoneCaseReworked.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">phoneCaseReworked</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarProductDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Manage Products
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarProductDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Product" asp-action="Index">Products</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="ProductMeta" asp-action="Index">Product Metadata</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Vendor" asp-action="Index">Manage Vendors</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarPurchaseDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Manage Purchases
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarPurchaseDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Purchase" asp-action="RecordPurchase">Record Purchase</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Purchase" asp-action="ViewPurchaseHistory">View Purchase History</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarPaymentDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Manage Payments
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarPaymentDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Payment" asp-action="MakePayment">Make Payment</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Payment" asp-action="ViewPaymentHistory">View Payment History</a></li>
                            </ul>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - phoneCaseReworked
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
